<?xml version="1.0" encoding="UTF-8" ?>




<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd" >



	<bean id="controlerDirectory" class="fr.aifcc.master.directory_service.ControlerDirectory">
		<constructor-arg>
			<ref bean="connecteurBase" />
		</constructor-arg>
	</bean>

    <bean id="connecteurBase" class="fr.aifcc.master.directory_impl.DatabaseDirectory" >
        <constructor-arg index="0" type="java.lang.String">
        	<value>org.apache.derby.jdbc.ClientDriver</value>
        </constructor-arg>
        <constructor-arg index="1" type="java.lang.String">
        	<value>jdbc:derby://localhost:1527/NomBDD</value>
        </constructor-arg>
    </bean>

</beans>